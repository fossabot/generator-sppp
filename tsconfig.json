{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "rootDir": "src",
    "jsx": "react",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "newLine": "LF",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": ["node", "sharepoint"],
    "strictNullChecks": true,
    "outDir": "app",
    "baseUrl": "src/",
    "paths": {
      "@utils/*": [ "templates/src/scripts/utils/*" ],
      "@components/*": [ "templates/presets/react/scripts/components/*" ],
      "@containers/*": [ "templates/presets/react/scripts/containers/*" ]
    }
  },
  "exclude": [
    "node_modules",
    "app",
    "src/templates",
    "tmp",
    "test"
  ]
}